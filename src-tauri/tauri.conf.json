{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Port Watch",
  "version": "0.2.0",
  "identifier": "com.pgkim.portwatch",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Port Watch",
        "width": 920,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; connect-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
